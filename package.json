{
  "name": "celo",
  "version": "1.0.0",
  "author": "Celo",
  "license": "APACHE 2",
  "private": true,
  "scripts": {
    "lint": "yarn lerna run lint",
    "lint:do-not-merge": "! git grep -E 'DO[ _]*NOT[ _]*MERGE'",
    "prettify": "yarn run prettier --config .prettierrc.js --write '**/*.+(ts|js)'",
    "reset": "yarn reset-modules && yarn reset-cache",
    "test": "yarn run lerna run test",
    "build": "yarn run lerna run build",
    "postinstall": "yarn run lerna run postinstall && yarn keys:decrypt",
    "keys:decrypt": "bash scripts/key_placer.sh decrypt",
    "keys:encrypt": "bash scripts/key_placer.sh encrypt"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^17.0.29",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "resolutions": {}
}
